extends layout.pug

block content
    .new-question-button
        a(href='/questions/new')
              button(class= 'nav-button right') Add Question
    h2 My questions:
    if questions && questions.length > 0
        table
            thead(class='thead-dark')
                tr
                th my Questions
                th Upvotes
                th Downvotes
                th Modify
                th Add Topic
            tbody
                each question in questions
                    tr
                        td= question.title
                        td XXX
                        td XXX
                        td
                            form(action=`/questions/${question.id}` method='get')
                                input(type='hidden' name='_csrf' value=csrfToken)
                                button(type='submit') Edit / Delete
    else
        h2 No answers yet :3

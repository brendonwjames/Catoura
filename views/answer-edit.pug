extends layout.pug

block content
  if errors
    div(role='alert')
      p The following error(s) occurred:
      ul
        each error in errors
          li= error
    div(role='alert')
      p The following error(s) occurred:
      pre= JSON.stringify(error, null, 2)
  form(action=`/answers/edit/${answer.id}` method='post')
    input(type='hidden' name='_csrf' value=csrfToken)
    div(class='form-group')
      label(for='content') Content
      textarea(name='content' id='content')= answer.content
      //- input(type='text' id='content' value=answer.content name='content')

      button(type='submit') Submit 
      a(href='/') Cancel

extends layout.pug

block content
  if errors
    div(role='alert')
      p The following error(s) occurred:
      ul
        each error in errors
          li= error
    div(role='alert')
      p The following error(s) occurred:
      pre= JSON.stringify(error, null, 2)
  h2  Questions with #{topic.title}'s Topic
  if topic.Questions && topic.Questions.length > 0
        table
            thead(class='thead-dark')
                tr
                th Questions
            tbody
                each question in topic.Questions
                    tr
                      td
                        a(href= `/questions/${question.id}`)= question.title
  else
        h3 There's no question with any #{topic.title}'s topic yet ~(=^‥^)ノ☆
